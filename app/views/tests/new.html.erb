<%= form_for @test, builder: Zurb::FoundationFormBuilder do |f| %>

  <%= @test.errors.full_messages if @test.errors.any? %>

  <%= f.zurb_collection_check_boxes(:text_field, Field.all, :id, :name) do |b|
    b.label(:"data-value" => b.value) { b.check_box + b.text }
    end%>



  <%= f.submit %>

<% end %>